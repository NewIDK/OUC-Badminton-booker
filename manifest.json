{
  "manifest_version": 3,
  "name": "场馆预定助手_BY_KID",
  "version": "1.0",
  "description": "在指定网站上进行定时点击预定",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://hqsz.ouc.edu.cn/*",
    "https://hqsz.ouc.edu.cn/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://hqsz.ouc.edu.cn/*", "https://hqsz.ouc.edu.cn/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    }
  }
}